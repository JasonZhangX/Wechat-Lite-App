.service{
    color: #323a45;
    padding: 30rpx;
}

.table{
    font-size: 0.8rem;
   
}
.table .row{
    border-bottom: 1px solid #e5e5e5;
    clear: both;
    display: flex;
    align-items: center;
}

.table .row:nth-child(odd){
    
}

.table .row .th{
    font-weight: bold;
    font-size: .8rem;
    text-shadow: 1rpx 1rpx 4rpx #CCC;
    padding: 20rpx 20rpx;
    border-bottom: 5rpx solid #03a9f4;
}

.table .row .td{
    padding: 15rpx 20rpx;
}

.table .row .tl{
    flex: 5;
}

.table .row .tr{
    flex: 1;
}


.table .level1{
    border-bottom: 4rpx solid #03a9f4;
}

.table .level1 .td{
    font-weight: bold;
    padding: 18rpx 20rpx;    
}

.table .level2:nth-child(even){
    background-color: #f3f5f7;
}

.table .level2 .tl{
    text-indent: 30rpx;
    white-space:nowrap;
    max-width:330rpx;

}

.table .level3:nth-child(even){
    background-color: #f3f5f7;
}

.table .level3 .tl{
    text-indent: 60rpx;
    white-space:nowrap;
    max-width:330rpx;

}

.table .level2 .td{
    font-size: .75rem;
}

.table .level3 .td{
    font-size: .75rem;
}